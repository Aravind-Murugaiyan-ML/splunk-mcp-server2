{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": ".",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}